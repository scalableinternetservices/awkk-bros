<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="35.164.195.124" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
<!--
    <arrivalphase phase="2" duration="30" unit="second">
        <users arrivalrate="2" unit="second"></users>
    </arrivalphase>

    <arrivalphase phase="3" duration="30" unit="second">
      <users arrivalrate="4" unit="second"></users>
    </arrivalphase>

    <arrivalphase phase="4" duration="30" unit="second">
      <users arrivalrate="8" unit="second"></users>
    </arrivalphase>
-->
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
     
      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_number" start="100000" end="9999999">
        <var name="random_user_name" />
      </setdynvars>

      <!-- Have users login -->

      <request>
        <http url='/users/sign_up' version='1.1' method='GET'></http> 
      </request>
      
      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5Bemail%5D=%%_random_user_name%%%40gmail.com
          &amp;user%5Busername%5D=%%_random_user_name%%
          &amp;user%5Bpassword%5D=%%_random_user_name%%
          &amp;user%5Bpassword_confirmation%5D=%%_random_user_name%%
          &amp;commit=Sign+up'>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/users/sign_in'
          version='1.1'
          method='POST'
          contents='user%5Bemail%5D=%%_random_user_name%%%40gmail.com
          &amp;user%5Busername%5D=%%_random_user_name%%
          &amp;user%5Bpassword%5D=%%_random_user_name%%
          &amp;user%remember_me%5D=0
          &amp;commit=Log+in'>
        </http>
      </request>

      <!-- Have users create events -->

      <request>
        <http
          url='/events'
          version='1.1'
          method='GET'>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request>
        <http
          url='/events/new'
          version='1.1'
          method='GET'>
        </http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http
          url='/events'
          version='1.1'
          method='POST'
          contents='event%5Buser_id%5D=1
          &amp;event%5Bname%5D=%%_random_user_name%%_event
          &amp;event%5Blocation%5D=Test+Location
          &amp;event%5Bdescription%5D=Description+for+test+event
          &amp;commit=Create+Event'>
        </http>
      </request>

    </session>
  </sessions>
</tsung>
