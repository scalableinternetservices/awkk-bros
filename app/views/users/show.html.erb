<%= stylesheet_link_tag    'show', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag    'other_links', media: 'all', 'data-turbolinks-track': 'reload' %>


<!-- <p id="notice"><%= notice %></p> -->

<div class="container alert alert-info" style="width: 50%; border-width: 5px;">
<h1 class="details" style="color: #FFC000; margin-top: 50px">
  <strong><%= @user.username %></strong>
</h1><br>

<h4 style="margin-bottom: 20px"><strong>Created Events (<%= @created_events.length %>)</strong></h4>

<% @created_events.each do |created_event| %>
  <h5 class="other-links"><%= link_to created_event.name, created_event %></h5>
<% end %>

<br>
<h4>----------------------------------------------------------------------------------------------------</h4>
<br>

<h4 style="margin-bottom: 20px"><strong>Attending Events (<%= @participating.length %>)</strong></h4>

<% @participating.each do |participating| %>
  <h5 class="other-links"><%= link_to participating.event.name, participating.event %></h5>
<% end %>

<br>

<%= link_to 'Return', events_path %></h5>

</div>

