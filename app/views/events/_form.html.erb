<%= stylesheet_link_tag    'form', media: 'all', 'data-turbolinks-track': 'reload' %>

<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="field">
   <h3><%= f.label :name %></h3>
    <h4 style="color: white"><%= f.text_field :name, :maxlength => 8, :size => 20%></h4>
  </div>
  <br>

  <div class="field">
    <h3><%= f.label :location %></h3>
    <h4 style="color: white"><%= f.text_field :location, :maxlength => 11, :size => 20 %></h4>
  </div>
  <br>  

  <div class="field">
    <h3><%= f.label :description %></h3>
    <h4 style="color: white"><%= f.text_area :description %></h4>
  </div>
  <br><br>

  <div class="actions">
    <%= f.submit %>
  </div>
  <br>
<% end %>